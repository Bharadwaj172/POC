<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Resize Settings"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnByDimensions"
                android:layout_marginTop="40dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="By Dimensions"/>

            <Button
                android:id="@+id/btnAsPercentage"
                android:layout_marginTop="40dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="As Percentage"/>
        </LinearLayout>

        <!-- Text label for "Size" -->

        <!-- SeekBar or Slider for percentage adjustment -->

        <!-- TextView for showing the selected percentage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="size"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/seekBarSize"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="56" />

        <TextView
            android:id="@+id/textViewPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56%"
            android:layout_gravity="end"/>

        <!-- Explanatory text -->
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make my image 56% of original size (358 X 359 px)"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:text="resize image "
            />

        <!-- Add any other UI elements needed below -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>